<h1>Listing policy_templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Is active</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @policy_templates.each do |policy_template| %>
      <tr>
        <td><%= policy_template.name %></td>
        <td><%= policy_template.is_active %></td>
        <td><%= policy_template.body %></td>
        <td><%= link_to 'Show', policy_template %></td>
        <td><%= link_to 'Edit', edit_policy_template_path(policy_template) %></td>
        <td><%= link_to 'Destroy', policy_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

